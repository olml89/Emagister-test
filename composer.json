{
    "name": "olml89/emagister-test",
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Heritages\\App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Heritages\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "tests": "XDEBUG_MODE=coverage ./vendor/bin/phpunit tests --coverage-clover coverage.xml"
    },
    "scripts-descriptions": {
        "tests": "Run all PHPUnit tests and generate a coverage.xml clover report"
    }
}
